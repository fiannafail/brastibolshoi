$red-color = #dc0101
$blue-color = #0069d6
$light-green = #4cb982

a, a:hover, a:focus, a:visited
	color #41B883

.form-group
	margin 18px 0
	display flex
	span
		font-size 14px
		font-weight 500
		padding 0 10px
label
	display inline-block
	padding 10px
	width 150px
	font-size 14px
	font-weight 500
	font-family: Roboto
input[type="text"], select, textarea
	width 325px
	box-sizing border-box
	box-shadow: 1px 1px 4px rgba(0,0,0,0.35);
	background-color white
	border none
	border-top none
	padding 18px
	font-size 14px
	font-family: Roboto
	letter-spacing 0.2px
	font-weight 500
	border 2px solid #fff
	color #313131
	&::placeholder
		color #a5a5a5
		font-weight 500
	&.is-danger::placeholder
		border-color #D50000
		color #D50000
	&:focus
		outline none
	&.is-danger
		border 2px solid #D50000
		color #D50000
.help.is-danger
	color #D50000
	font-size 12px
	font-weight 500
	margin-top: 6px
#customdropzone
	border 2px dashed #3b8070
	margin 20px 0
textarea 
	min-height 175px
select option 
	padding 6px
.btn
	padding: 15px 25px
	cursor pointer
	border none
	font-size: 16px
	font-family: Roboto
	color #3c3c3c
	background-color: white
	border: 2px solid $red-color
	font-weight: 500
	box-shadow: 1px 1px 6px rgba(0,0,0,0.4)
	transition: .3s
	&:hover
		background-color: rgba(0,0,0,0.05)
		transition: .3s
	&.red
		color white
		background-color: $red-color
		&:hover
			background-color: rgba(221, 61, 0, 0.75)
			transition: .3s
		
